{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Structure (rooms)",
  "type": "object",
  "required": ["rooms"],
  "properties": {
    "_provenance": { "type": "object" },
    "version": { "type": "string" },
    "rooms": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "title", "route", "stylepack", "element"],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "route": { "type": "string" },
          "stylepack": { "type": "string" },
          "element": { "type": "string" },

          "toneSet": { "type": "string" },
          "hourMap": { "type": "boolean" },
          "experiments": { "type": "array", "items": { "type": "string" } },
          "plaque": { "type": "string" },

          "notes": { "type": "string" },

          "meta": {
            "type": "object",
            "properties": {
              "slug": { "type": "string" },
              "realm": { "type": "string" },
              "geometry": { "type": "string" },
              "toneHz": { "type": "number" },
              "art": {
                "type": "object",
                "properties": {
                  "background": { "type": "string" },
                  "overlay": { "type": "string" },
                  "shader": { "type": "string" },
                  "palette_ref": { "type": "string" }
                },
                "additionalProperties": false
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}