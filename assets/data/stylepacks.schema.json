{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://bekalah.github.io/stone-grimoire/schemas/stylepacks.schema.json",
  "title": "Stylepacks",
  "type": "object",
  "required": ["packs"],
  "properties": {
    "packs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "title", "palette"],
        "properties": {
          "id": { "type": "string", "pattern": "^[a-z0-9_\\-]+$" },
          "title": { "type": "string", "minLength": 3 },
          "fonts": {
            "type": "object",
            "properties": {
              "display": { "type": "string" },
              "body": { "type": "string" }
            },
            "additionalProperties": false
          },
          "palette": {
            "type": "object",
            "required": ["bg","ink","wash","line","accent"],
            "properties": {
              "bg":     { "type": "string", "pattern": "^#([0-9a-fA-F]{6})$" },
              "ink":    { "type": "string", "pattern": "^#([0-9a-fA-F]{6})$" },
              "wash":   { "type": "string", "pattern": "^#([0-9a-fA-F]{6})$" },
              "line":   { "type": "string", "pattern": "^#([0-9a-fA-F]{6})$" },
              "accent": { "type": "string", "pattern": "^#([0-9a-fA-F]{6})$" },
              "accent2":{ "type": "string", "pattern": "^#([0-9a-fA-F]{6})$" }
            },
            "additionalProperties": false
          },
          "ornament": {
            "type": "object",
            "properties": {
              "texture": { "type": "string" },
              "border":  { "type": "string" }
            },
            "additionalProperties": false
          },
          "overlays": {
            "type": "object",
            "properties": {
              "layers": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["id"],
                  "properties": {
                    "id": { "type": "string" },
                    "src": { "type": "string" },
                    "blend": { "type": "string" },
                    "opacity": { "type": "number", "minimum": 0, "maximum": 1 },
                    "alt": { "type": "string" }
                  },
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": false
          },
          "a11y": {
            "type": "object",
            "properties": {
              "allowStrobe": { "type": "boolean" },
              "toneGate": { "type": "string", "enum": ["user-gesture","always-off"] },
              "highContrastVariant": { "type": "boolean" }
            },
            "additionalProperties": false
          },
          "notes": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}