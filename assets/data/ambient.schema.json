{
  "$schema":"https://json-schema.org/draft/2020-12/schema",
  "title":"Ambient (tones & planetary hours)",
  "type":"object",
  "required":["sets","planetary_hours"],
  "properties":{
    "sets":{
      "type":"array",
      "minItems":1,
      "items":{
        "type":"object",
        "required":["id","title","tones","envelope"],
        "properties":{
          "id":{"type":"string"},
          "title":{"type":"string"},
          "tones":{
            "type":"array",
            "minItems":1,
            "items":{
              "type":"object",
              "required":["hz","id","label"],
              "properties":{
                "hz":{"type":"number","minimum":1},
                "id":{"type":"string"},
                "label":{"type":"string"}
              },
              "additionalProperties":false
            }
          },
          "envelope":{
            "type":"object",
            "required":["attack","release","gain"],
            "properties":{
              "attack":{"type":"number","minimum":0},
              "release":{"type":"number","minimum":0},
              "gain":{"type":"number","minimum":0,"maximum":1}
            },
            "additionalProperties":false
          }
        },
        "additionalProperties":false
      }
    },
    "planetary_hours":{
      "type":"object",
      "properties":{
        "Sun":{"type":"number"},
        "Moon":{"type":"number"},
        "Mercury":{"type":"number"},
        "Venus":{"type":"number"},
        "Mars":{"type":"number"},
        "Jupiter":{"type":"number"},
        "Saturn":{"type":"number"}
      },
      "additionalProperties":false
    }
  },
  "additionalProperties":false
}