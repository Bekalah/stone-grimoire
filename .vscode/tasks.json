{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Fix All Markdown Issues",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "fixmd"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "problemMatcher": []
    },
    {
      "label": "Check Markdown (Dry Run)",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "checkmd"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false
      }
    },
    {
      "label": "Fix Only Changed Markdown",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "fix-changed"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false
      }
    }
  ]
}
